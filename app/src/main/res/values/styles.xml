<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="outlinedTextFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorIconTint">@color/error_red</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="endIconTint">@color/grey</item>
        <item name="errorIconDrawable">@drawable/ic_error</item>
        <item name="errorTextAppearance">@style/TextFieldErrorStyle</item>
        <item name="boxStrokeErrorColor">@color/error_red</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextAppearance">@style/TextFieldHelperStyle</item>
        <item name="endIconMode">custom</item>
    </style>

    <style name="TextFieldErrorStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/error_red</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextFieldHelperStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/error_red</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>


</resources>