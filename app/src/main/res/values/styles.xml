<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="outlinedTextFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorIconTint">@color/error_red</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="endIconTint">@color/grey</item>
        <item name="errorIconDrawable">@drawable/ic_error</item>
        <item name="errorTextAppearance">@style/TextFieldErrorStyle</item>
        <item name="boxStrokeErrorColor">@color/error_red</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextAppearance">@style/TextFieldHelperStyle</item>
        <item name="endIconMode">custom</item>
    </style>

    <style name="TextFieldErrorStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/error_red</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextFieldHelperStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/error_red</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="checkBoxStyle">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/tag_button_color</item>
        <item name="android:textColor">@color/tag_button_text_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="filledButtonStyle">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="outlinedButtonStyle">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="primaryTextButtonStyle">
        <item name="android:textColor">@color/dark_pink</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="minHeight">48dp</item>
        <item name="minWidth">48dp</item>
    </style>

    <style name="secondaryTextButtonStyle">
        <item name="android:textColor">@color/button_grey</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="editTextStyle">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:lines">1</item>
        <item name="android:padding">0dp</item>
    </style>


</resources>